<p id="notice"><%= notice %></p>

<h1>Businesses</h1>

<table  class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Business</th>
      <th>Description</th>
      <th>Team Members</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>  
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.b_name %></td>
        <td><%= business.description %></td>
        <td><%= business.users.pluck(:name).join(",") %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Business', new_business_path , class:"btn btn-dark"%>
